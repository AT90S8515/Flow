<Window x:Class="Flow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flow"
        mc:Ignorable="d"
        Title="Flow" Height="100" Width="525" Icon="icon.ico" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel>
            <TextBox x:Name="textboxLoLPath" IsReadOnly="True" Margin="10,10,10,0" Height="24"/>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="buttonSelectLoL" Content="Select League of Legends" Margin="10,10,0,0" Click="buttonSelectLoL_Click"/>
                <Button x:Name="buttonPatch" Content="Patch" Margin="325,10,0,0" IsEnabled="False" Click="buttonPatch_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
